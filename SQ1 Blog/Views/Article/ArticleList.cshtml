@model ArticlePageModel
@{
    ViewData["Title"] = "ArticleList";
    Layout = "~/Views/AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><strong>My Articles</strong></h3>
    </div>
    <div class="row">

        <div class="col-lg-4" style="padding:10px">
            <a class="pull-right blue btn btn-primary" asp-controller="Article" asp-action="AddArticle" style="width:110px;">Add Article</a>
        </div>

        @if (Model.IsAdminUser)
        {
            <div class="col-lg-4" style="padding:10px">
                <a class="pull-right blue btn btn-primary" asp-controller="Article" asp-action="ImportArticle" style="width:110px;">Import Article</a>
            </div>
        }

    </div>
    @*<div class="col-lg-12" style="padding:10px">
        <a class="pull-right blue btn btn-primary" asp-controller="Article" asp-action="AddArticle" style="width:110px;">Add Article</a><a class="pull-right blue btn btn-primary" asp-controller="Article" asp-action="AddArticle" style="width:110px;">Add Article</a>
    </div>*@
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Article List Table
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form method="post">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <td><b>S/No.</b></td>
                                <td><b>Title</b></td>
                                <td><b>Date</b></td>
                                <td><b>Author</b></td>
                                <td><b>Description</b></td>


                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="7" class="text-center"><b>No Articles yet.</b></td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var articles in Model.Articles)
                                 {
                                    <tr>
                                        <td>@Html.DisplayFor(_ => articles.Id)</td>
                                        <td>@Html.DisplayFor(_ => articles.Title)</td>
                                        <td>@Html.DisplayFor(_ => articles.PublicationDate)</td>
                                        <td>@Html.DisplayFor(_ => articles.Author)</td>
                                        <td>@Html.DisplayFor(_ => articles.Description)</td>

                                    </tr>
                                 }
                            }


                        </tbody>
                    </table>
                </form>

            </div>
        </div>
    </div>
</div>

